{
  "name": "project-manager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "migrations:dev && next dev",
    "test": "jest",
    "wait-for-db": "node infra/scripts/wait-for-db.js",
    "build": "next build",
    "db:up": "docker compose down -v && docker compose up -d && npm run wait-for-db",
    "migrations:dev": "npm run db:up && npx prisma migrate dev",
    "migrations:prod:pr": "npm run db:up && npx prisma validate && npx prisma migrate deploy",
    "migrations:prod:push": "npx prisma validate && npx prisma migrate deploy",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "dotenv": "^17.3.1",
    "dotenv-expand": "^12.0.3",
    "next": "16.1.6",
    "pg": "^8.18.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.33",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jest": "^30.2.0",
    "prisma": "^7.4.1",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.6",
    "typescript": "^5"
  }
}
